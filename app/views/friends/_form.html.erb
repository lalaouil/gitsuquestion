  </div>

  <div class="field">
    <%= f.label 'Maximum perferred age of friend' %>
    <%= f.text_field :max_pref_age %>
  </div>

  <div class="field">
    <%= f.label 'Your gender' %>
    <%= f.text_field :gender %>
  </div>

  <div class="field">
    <%= f.label 'What gender do you prefer in a friend?' %>
    <%= f.text_field :gender_pref %>
  </div>

  <div class="field">
    <%= f.label 'Do you require any support in your day to day life?' %>
    <%= f.text_field :support %>
  </div>

  <div class="field">
    <%= f.label 'How important is it that your friend have the same level of independence as you?' %>
    <%= f.text_field :friend_level %>
